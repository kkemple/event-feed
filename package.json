{
  "name": "event-feed",
  "version": "1.0.0",
  "description": "stream social feeds for events (geo, curation, auto-publish)",
  "main": "build/server/index.js",
  "scripts": {
    "build": "npm run clean && npm run compile:server && npm run compile:client",
    "build:watch": "concurrently \"npm run compile:server:watch\" \"npm run compile:client:watch\"",
    "clean": "rimraf lib",
    "compile:client": "webpack --progress --colors",
    "compile:client:watch": "webpack --progress --colors --watch",
    "compile:server": "babel src --out-dir build --source-maps inline --ignore test.js,client",
    "compile:server:watch": "babel src --out-dir build --source-maps inline --ignore test.js,client --watch",
    "lint": "standard \"src/**/*.js\" && flow",
    "pretest": "npm run lint",
    "pretest:unit": "npm run lint",
    "pretest:coverage": "npm run lint",
    "server": "nodemon --watch build --exec \"node -r dotenv/config\" build/server/index.js | pino",
    "start": "node build/server/index.js | pino",
    "test": "ava",
    "test:coverage": "nyc ava && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:unit": "ava --match \"[Unit]\"",
    "test:watch": "ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kkemple/event-feed.git"
  },
  "keywords": [
    "events",
    "geolocation",
    "feed",
    "realtime",
    "social",
    "sharing",
    "streaming"
  ],
  "author": "kurtiskemple@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kkemple/event-feed/issues"
  },
  "homepage": "https://github.com/kkemple/event-feed#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.14.0",
    "clean-webpack-plugin": "^0.1.10",
    "codecov": "^1.0.1",
    "concurrently": "^2.2.0",
    "css-loader": "^0.24.0",
    "dotenv": "^2.0.0",
    "enzyme": "^2.4.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.31.1",
    "html-webpack-plugin": "^2.22.0",
    "image-webpack-loader": "^2.0.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.2",
    "nyc": "^8.1.0",
    "postcss-loader": "^0.11.0",
    "precss": "^1.4.0",
    "rimraf": "^2.5.4",
    "standard": "^8.0.0",
    "standard-loader": "^5.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "classnames": "^2.2.5",
    "cuid": "^1.3.8",
    "debug": "^2.2.0",
    "hapi": "^15.0.1",
    "hapi-pino": "^1.2.0",
    "hapi-statsd": "^5.0.1",
    "inert": "^4.0.2",
    "jasper-hapi-healthcheck": "^0.1.0",
    "jasper-hapi-metrics": "^0.1.0",
    "keymirror": "^0.1.1",
    "lodash.compact": "^3.0.1",
    "lodash.isequal": "^4.4.0",
    "lodash.throttle": "^4.1.1",
    "moment": "^2.14.1",
    "normalize.css": "^4.2.0",
    "pino": "^2.8.3",
    "react": "^15.3.1",
    "react-datepicker": "^0.29.0",
    "react-dom": "^15.3.1",
    "react-router": "^2.7.0",
    "rethinkdb": "^2.3.2",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "twitter": "^1.4.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "failFast": true,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports",
      "transform-flow-strip-types",
      "transform-runtime",
      [
        "module-resolver",
        {
          "root": [
            "./src/lib"
          ]
        }
      ]
    ]
  }
}
